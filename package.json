{
  "name": "@ampath/esm-reporting",
  "private": true,
  "version": "12.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "openmrs develop --backend=https://staging.ampath.or.ke --api-url=/openmrs --sources packages/esm-clinic-dashboard",
    "ci:publish": "yarn workspaces foreach --all --topological --exclude @ampath/esm-reporting npm publish --access public --tag latest",
    "ci:prepublish": "yarn workspaces foreach --all --topological --exclude @ampath/esm-reporting npm publish --access public --tag next",
    "ci:prepublish-patch": "yarn workspaces foreach --all --topological --exclude @ampath/esm-reporting npm publish --access public --tag patch",
    "release": "yarn workspaces foreach --all --topological version",
    "verify": "turbo run lint typescript test --color --concurrency=5",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@openmrs/esm-framework": "next",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "openmrs": "patch:openmrs@npm%3A9.0.1-pre.3992#~/.yarn/patches/openmrs-npm-9.0.1-pre.3992-490701bfb4.patch",
    "prettier": "^3.0.3",
    "turbo": "^2.5.2",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": "eslint --cache --fix --max-warnings 0",
    "*.{css,scss,ts,tsx}": "prettier --write --list-different"
  },
  "packageManager": "yarn@4.10.3"
}
